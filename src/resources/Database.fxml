<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="567.0" prefWidth="836.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.DatabaseController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" prefHeight="567.0" prefWidth="836.0">
         <Text text="Activity recorded by database" textAlignment="CENTER" wrappingWidth="600.0">
            <font>
               <Font name="Consolas" size="30.0"/>
            </font>
         </Text>
         <ScrollPane prefHeight="380.0" prefWidth="736.0">
            <content>
               <VBox fx:id="recordsContainer" alignment="CENTER" spacing="20.0" />
            </content>
         </ScrollPane>
         <Button fx:id="deleteButton"
                 onAction="#deleteContent"
                 prefHeight="30.0" prefWidth="111.0" text="Clear data">
            <font>
               <Font name="Consolas" size="15.0"/>
            </font>
         </Button>
         <Button fx:id="buttonNavigateToPreview"
                 onAction="#navigateToPreview"
                 prefHeight="35.0" prefWidth="162.0" text="Back to preview">
            <font>
               <Font name="Consolas" size="15.0"/>
            </font>
         </Button>
      </VBox>
   </children>
</AnchorPane>
